{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./dist",
    "incremental": false,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["src", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
