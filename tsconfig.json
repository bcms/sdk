{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "importsNotUsedAsValues": "error",
    "strict": true,
    "strictNullChecks": true
  },
  "typedocOptions": {
    "entryPoints": ["./src"],
    "name": "BCMS | SDK",
    "out": "doc",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "public", "lib", "tmp"]
}
